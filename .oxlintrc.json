{
	"$schema": "./node_modules/oxlint/configuration_schema.json",
	"categories": {
		"correctness": "warn"
	},
	"rules": {
		"eslint/no-unused-vars": "warn",
		"typescript/no-deprecated": "warn",
		"jsdoc/check-tag-names": "warn"
	},
	"plugins": ["nextjs", "import", "jsdoc"],
	"ignorePatterns": ["node_modules/**", ".next/**", "public/**"]
}
